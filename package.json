{
  "name": "fastify-ts-app-template",
  "author": "Leandro Moscheni <lmoscheni>",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Template for fastify app with TS",
  "keywords": [
    "Fastify",
    "Template",
    "TypeScript"
  ],
  "engines": {
    "node": "14.9.0"
  },
  "main": "src/main/main.ts",
  "scripts": {
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/src/main/main.js",
    "prod:start": "npm run build && pm2 start build/src/main/main.js",
    "prod:stop": "pm2 stop index",
    "prod:kill": "pm2 kill index",
    "prod:list": "pm2 list",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest --verbose",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.44",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "onchange": "^7.0.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "fastify": "^3.15.1",
    "fastify-decorators": "^3.9.1",
    "fastify-env": "^2.1.1",
    "fastify-helmet": "^5.3.1",
    "fastify-swagger": "^4.7.0",
    "inversify": "^5.1.1",
    "pm2": "^4.5.6",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2"
  }
}
